{
  "compilerOptions": {
    "outDir": "./dist", // Ensure this points to `dist`
    "rootDir": "./src",
    "module": "CommonJS",
    "target": "ES6",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*"], // Ensure this includes `auth-routes.ts`
  "exclude": ["node_modules", "dist"]
}

